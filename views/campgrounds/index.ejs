<% layout("layouts/boilerplate") %>

<h1 class="text-center mt-5 mb-3">All Campgrounds</h1>
<section class="mb-5 row g-4">
    <% for (campground of campgrounds) { %>
    <a
        href="/campgrounds/<%= campground.id %>"
        class="col-lg-6 text-decoration-none">
        <div class="card mb-3 shadow">
            <div class="row g-0">
                <div class="col-md-4">
                    <img
                        src="<%= campground.image %>"
                        class="img-fluid rounded-start" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text">
                            <small class="text-body-secondary"
                                ><%= campground.location %></small
                            >
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <% } %>
</section>
