<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>New Campground</title>
    </head>
    <body>
        <h1>New Campground</h1>
        <form action="/campgrounds" method="POST">
            <div>
                <label for="name">Name: </label>
                <input type="text" name="campground[title]" id="name" />
            </div>
            <div>
                <label for="description">Description</label>
                <textarea
                    name="campground[description]"
                    id="description"
                    rows="5"
                    cols="25"></textarea>
            </div>
            <div>
                <label for="location">Location: </label>
                <input type="text" name="campground[location]" id="location" />
            </div>
            <div>
                <label for="price">Price: </label>
                <input type="number" name="campground[price]" id="price" />
            </div>
            <button>Submit</button>
        </form>
        <a href="/campgrounds">Cancel</a>
    </body>
</html>
